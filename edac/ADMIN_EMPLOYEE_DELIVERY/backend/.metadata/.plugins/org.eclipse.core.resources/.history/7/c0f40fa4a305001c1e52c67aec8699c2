package com.onlineshopping.daoes;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.onlineshopping.entities.Orders;
import com.onlineshopping.entities.Delivery;

import java.util.Date;
import java.util.List;

public interface OrdersDao extends JpaRepository<Orders, Integer> {

	List<Orders> findByDeliveryBoy(Delivery deliveryboy);
	
	@Modifying
    @Query(value="update orders  set deliveryDate =:a ,paymentStatus= :b,deliveryStatus=:c  where orderId =:id" , nativeQuery = true)
	//Orders updateOrders(@Param("a") Date date,@Param("b") String status,@Param("c") String dstatus, @Param("id") int id);
	Orders updateOrders( Date date, String status, String dstatus,  int id);
	
}
